{
    "name": "qiankun-main-app",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:all": "concurrently --names \"主应用,Vue子应用,React子应用\" --prefix-colors \"blue,green,yellow\" --prefix \"{name}\" \"npm run dev\" \"npm run dev:vue\" \"npm run dev:react\"",
        "start": "bash start-dev.sh",
        "dev:vue": "cd vue-sub-app && npm run dev",
        "dev:react": "cd react-sub-app && npm run dev",
        "build": "vite build",
        "build:prod": "vite build --mode production",
        "preview": "vite preview --port 7777",
        "preview:prod": "vite preview --port 7777 --host",
        "build:all": "npm run build && cd vue-sub-app && npm run build && cd ../react-sub-app && npm run build",
        "deploy": "bash deploy.sh"
    },
    "dependencies": {
        "qiankun": "^2.10.16",
        "vue": "^3.3.4",
        "vue-router": "^4.2.5"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^4.4.0",
        "concurrently": "^9.2.1",
        "terser": "^5.44.1",
        "vite": "^5.0.0"
    }
}